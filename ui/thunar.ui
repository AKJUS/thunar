<ui>
  <menubar name="main-menu">
    <menu action="file-menu">
      <menuitem action="properties" />
      <separator />
      <menuitem action="close-window" />
    </menu>

    <menu action="edit-menu">
      <menuitem action="copy-files" />
      <menuitem action="cut-files" />
      <menuitem action="paste-files" />
      <separator />
      <menuitem action="select-all-files" />
      <menuitem action="select-by-pattern" />
      <separator />
      <menuitem action="edit-toolbars" />
      <menuitem action="preferences" />
    </menu>

    <menu action="view-menu">
      <menuitem action="reload" />
<!--
      <menuitem action="sort-by-name" />
      <menuitem action="sort-by-permission" />
      <menuitem action="sort-by-size" />
      <menuitem action="sort-descending" />
      <menuitem action="sort-folders-before-files" />
      <menuitem action="show-hidden-files" />
-->
      <separator />
      <menuitem action="view-as-icons" />
      <menuitem action="view-as-list" />
    </menu>

    <menu action="go-menu">
      <menuitem action="go-up" />
      <menuitem action="go-back" />
      <menuitem action="go-forward" />
      <separator />
      <menuitem action="go-home" />
      <menuitem action="go-location" />
    </menu>

    <menu action="help-menu">
      <menuitem action="contents" />
      <menuitem action="report-bug" />
      <menuitem action="about" />
    </menu>
  </menubar>

  <toolbar name="main-toolbar">
    <toolitem action="go-back" />
    <toolitem action="go-forward" />
    <toolitem action="go-up" />
    <separator />
    <toolitem action="reload" />
    <separator />
    <toolitem action="go-home" />
  </toolbar>
</ui>
